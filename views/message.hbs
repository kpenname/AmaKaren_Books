<div class="page-body" id="message-page">

    <div class="form-header">
        <h2>We would love to hear from you</h2>
        <h3>Send us a message</h3>
    </div>
    <div id="msg" >
        <form action="/account/sendMessage/" method="POST" class="form">
            <div class="form-field">
                <textarea class="input" id="message" name="messageText" rows="10" autofocus ></textarea>
            </div>
            <div class="form-actions">
                <button class="btn" type="submit">Send</button>
            </div>
        </form>
    </div>
</div>